{
    "name": "rem",
    "version": "0.2.5-beta2",
    "description": "Doro",
    "main": "./wins/main/main.js",
    "scripts": {
        "build-icons": "electron-icon-builder -i=./icon.png -f",
        "build-app": "npm run build && npm run build-icons && electron-builder",
        "build-protocol": "tsc -p ./protocol",
        "build": "npm run build-protocol && rollup -c",
        "start": "npm run build && electron .",
        "preview": "electron .",
        "postinstall": "electron-builder install-app-deps"
    },
    "author": "RGB",
    "license": "GPLv2",
    "dependencies": {
        "compressing": "^1.10.1",
        "music-metadata": "^7.12.6",
        "nedb": "^1.8.0",
        "NeteaseCloudMusicApi": "^4.24.0",
        "node-fetch": "^2.6.7"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^11.1.6",
        "@rollup/plugin-wasm": "^6.2.2",
        "@types/nedb": "^1.8.16",
        "assemblyscript": "^0.27.27",
        "electron": "^33.0.0-beta.7",
        "electron-icon-builder": "^2.0.1",
        "picomatch": "^2.3.1",
        "rollup": "^2.73.0",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "sirv-cli": "^2.0.2",
        "svelte": "^3.48.0",
        "typescript": "^5.6.3"
    },
    "build": {
        "appId": "top.rgb39.rem",
        "files": [
            "!pages/**/*.js",
            "!*/**/{*.svelte,*.d.ts}",
            "!build.*",
            "!*.md",
            "!rollup.config.js",
            "!icon.png",
            "!preload",
            "!node_modules/**/{*.d.ts,*.map}",
            "!LICENSE",
            "!node_modules/electron",
            "!node_modules/electron-builder",
            "!node_modules/electron-icon-builder",
            "!node_modules/rollup",
            "!node_modules/rollup*",
            "!node_modules/@rollup",
            "!node_modules/svelte",
            "!node_modules/typescript",
            "!protocol"
        ],
        "linux": {
            "maintainer": "rgb39",
            "icon": "./icons",
            "target": [
                "deb",
                "tar.xz"
            ],
            "desktop": {
                "Icon": "rem"
            }
        }
    }
}
