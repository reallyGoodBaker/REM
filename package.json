{
    "name": "rem",
    "version": "0.1.18",
    "description": "Water Melon",
    "main": "./main.js",
    "scripts": {
        "build-icons": "electron-icon-builder -i=./icon.png -f",
        "build-app": "npm run build && electron-builder",
        "build": "rollup -c && npm run build-icons",
        "start": "rollup -c && electron .",
        "postinstall": "electron-builder install-app-deps"
    },
    "author": "RGB",
    "license": "GPLv2",
    "dependencies": {
        "@rollup/plugin-typescript": "^11.1.6",
        "compressing": "^1.10.1",
        "music-metadata": "^7.12.6",
        "NeteaseCloudMusicApi": "^4.13.6",
        "node-fetch": "^2.6.7"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-wasm": "^6.2.2",
        "assemblyscript": "^0.27.27",
        "electron": "^30.0.8",
        "electron-icon-builder": "^2.0.1",
        "picomatch": "^2.3.1",
        "rollup": "^2.73.0",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "sirv-cli": "^2.0.2",
        "svelte": "^3.48.0"
    },
    "build": {
        "appId": "top.rgb39.rem",
        "files": [
            "!pages/**/*.js",
            "!*/**/{*.svelte,*.d.ts}",
            "!build.*",
            "!*.md",
            "!rollup.config.js",
            "!icon.png"
        ],
        "linux": {
            "maintainer": "rgb39",
            "icon": "./icons",
            "target": [
                "deb",
                "tar.xz"
            ],
            "desktop": {
                "Icon": "rem"
            }
        }
    }
}
