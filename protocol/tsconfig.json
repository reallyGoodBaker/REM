{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "strict": true,
        "esModuleInterop": false,
        "outDir": "../protocol_dist",
        "rootDir": "./",
        "allowJs": true,
        "noImplicitAny": true,
        "declaration": true,
        "lib": [
            "ESNext.WeakRef",
            "DOM"
        ]
    },
    "include": [
        "./**/*"
    ]
}